{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": false,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es2022",
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "useDefineForClassFields": false,
        "paths": {
            "@aequum/nestjs-authn": [ "./packages/authn" ],
            "@aequum/nestjs-authn/*": [ "./packages/authn/*" ],
            "@aequum/nestjs-authz": [ "./packages/authz" ],
            "@aequum/nestjs-authz/*": [ "./packages/authz/*" ],
            "@aequum/nestjs-common": [ "./packages/common" ],
            "@aequum/nestjs-common/*": [ "./packages/common/*" ],
            "@aequum/nestjs-crudl": [ "./packages/crudl" ],
            "@aequum/nestjs-exceptions": [ "./packages/exceptions" ],
            "@aequum/nestjs-geojson-dto": [ "./packages/geojson-dto" ],
            "@aequum/nestjs-mongoose": [ "./packages/mongoose" ],
            "@aequum/nestjs-mongoose/*": [ "./packages/mongoose/*" ],
            "@aequum/nestjs-paginate-common": [ "./packages/paginate-common" ],
            "@aequum/nestjs-paginate-common/*": [ "./packages/paginate-common/*" ],
        }
    },
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "gulpfile.js",
        "eslint.config.mjs",
    ]
}

